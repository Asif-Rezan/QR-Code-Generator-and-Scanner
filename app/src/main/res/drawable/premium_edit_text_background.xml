<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Focused state -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="8dp" />
            <solid android:color="#32FFFFFF" />
            <stroke android:color="#2EFFFFFF" android:width="2dp" />
        </shape>
    </item>
    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="8dp" />
            <solid android:color="#21FFFFFF" />
            <stroke android:color="#21FFFFFF" android:width="2dp" />
        </shape>
    </item>
</selector>
